@import './variables.styl'


body, .app-container, #app
  display flex
  flex-direction column
  justify-content center
  align-items center
  position relative
  width 100%
  height 100%
  margin 0

.header
  display flex
  text-align center

.art-display-container
  width 90%
  margin auto

.art-display-grid
  display grid
  margin 0
  grid-gap 20px
  grid-template-columns 1fr 1fr 1fr 1fr 1fr 1fr 1fr
  grid-template-rows 1fr 1fr 1fr 1fr 1fr 1fr
  width 100%
  height 100vh

.art-display-item
  border 2px solid black

  &:nth-of-type(1n+0)
    grid-column 1 / span 3
    grid-row 1 / span 2
    background-color #1A3256

  &:nth-of-type(2n)
    grid-column 4 / span 4
    grid-row 1 / span 4
    background-color #A6CDF3

  &:nth-of-type(3n)
    grid-column 2 / span 2
    grid-row 3 / span 2
    background-color #A2D729

  &:nth-of-type(4n)
    grid-column 1 / span 4
    grid-row 5 / span 3
    background-color #E4E8E6

  &:nth-of-type(5n)
    grid-column 6 / span 2
    grid-row 5 / span 2
    background-color #FA824C

  .image-placeholder
    border 3px dotted black
    margin auto
    height 80%
