@import './variables.styl'


body, .app-container, .art-display-container, #app
  display flex
  justify-content center
  align-items center
  position relative
  width 100%
  height 100%
  margin 0

.art-display-grid
  display grid
  grid-gap 20px
  grid-template-columns 1fr 1fr 1fr 1fr 1fr 1fr 1fr
  grid-template-rows 1fr 1fr 1fr 1fr 1fr 1fr
  width 90%
  height 100vh

.art-display-item
  border 2px solid black

  &:nth-of-type(1n+0)
    grid-column 1 / span 3
    grid-row 1 / span 2

  &:nth-of-type(2n)
    grid-column 4 / span 4
    grid-row 1 / span 4

  &:nth-of-type(3n)
    grid-column 2 / span 2
    grid-row 3 / span 2

  &:nth-of-type(4n)
    grid-column 1 / span 4
    grid-row 5 / span 3

  &:nth-of-type(5n)
    grid-column 6 / span 2
    grid-row 5 / span 2

  .image-placeholder
    border 3px dotted black
    margin auto
    height 80%
